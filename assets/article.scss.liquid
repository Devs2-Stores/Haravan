					border-radius: var(--border_radius);
					transition: all .5s;
					cursor: pointer;
					li{
						&:not(:last-child) a{
							border-bottom: 1px solid var(--color_bg);
						}
						&.active > a{
							color: var(--color_main2); 
							svg, svg *{ color: var(--color_main2); fill: var(--color_main2); }
						}
						a{
							@include dFlex(flex, nowrap, space-between, center);
							padding: 7.5px 15px;
							&:hover{ 
								color: var(--color_main2); 
								svg, svg *{ color: var(--color_main2); fill: var(--color_main2); }
							}
							&.active span{
								transform: rotate(90deg);
							}
							span{ display: inline-block; min-width: 40px; text-align: center; transition: all .5s; font-size: 1.5rem; line-height: 1 }
						}
					}
					.menu1{
						display: none;
						li a{ padding-left: 30px; }
						.menu2{
							display: none;
							li a{ padding-left: 45px; }
							.menu3{
								display: none;
								li a{ padding-left: 60px; }
							}
						}
					}
				}
			}
		}
