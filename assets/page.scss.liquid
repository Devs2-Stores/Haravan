.page-about-new-contact-map {
	iframe {
		height: 270px;
		@media (max-width:767px){
			height: auto;
		}
	}
}
.page-about-new{
	.page-about-new-main{
		@include sectionPadding;
		.page-about-new-main-item{
			@include dFlex(flex, wrap, center, center);
			margin: 20px 0px;
			.page-about-new-main-item-left{
				width: 40%;
				padding: 0px 50px;
				img{ border-radius: var(--border_radius); margin:0 auto;display:block;}
				@include m0991{ width: 100%; margin: 20px 0px; padding: 0; }
			}
			.page-about-new-main-item-right{
				width: 60%;
				img{ border-radius: var(--border_radius); }
				@include m0991{ width: 100%; }
			}
			&:nth-child(2n+1){
				.page-about-new-main-item-left{
					@include m0991(min){ order: 2; }
				}
			}
		}
		.page-about-new-contact{
			@include dFlex(flex, wrap, flex-start, flex-start);
			margin-top: 50px;
			form{
				width: 50%;
				@include dFlex(flex, wrap, space-between, center);
				@include m0991{ width: 100%; }
				input{ 
					@include resetButton;
					width: 100%;
					padding: 5px 10px;
					border: 1px solid #dbdbdb;
					margin-bottom: 10px;
					border-radius: var(--border_radius);
				}
				textarea{
					@include resetButton;
					width: 70%;
					height: 65px;
					padding: 5px 10px;
					border: 1px solid #dbdbdb;
					border-radius: var(--border_radius);
					@include m0480{ width: 65% }
				}
				button{ 
					@include resetButton;
					background: var(--color_main2);
					padding: 0;
					border: 1px solid var(--color_main2);
					width: calc(30% - 10px);
					color: var(--color2);
					height: 65px;
					line-height: 65px;
					text-transform: uppercase;
					transition: all .4s linear;
					border-radius: var(--border_radius);
					&:hover{
						background: transparent;
						color: var(--color_main2);
					}
					@include m0480{ width: calc(35% - 10px); font-size: .9rem; }
				}
			}
			.page-about-new-contact-map{
				width: 50%;
				padding-left: 20px;
				@include m0991{ width: 100%; padding: 10px 0; }
			}
		}
	}
}