@mixin m1200($string: max) {
	@if $string == min{
		@media(min-width: 1200px){ @content; }
	}@else {
		@media(max-width: 1200px){ @content; }
	}
}
@mixin m1024($string: max) {
	@if $string == min{
		@media(min-width: 1024px){ @content; }
	}@else {
		@media(max-width: 1024px){ @content; }
	}
}
@mixin m0991($string: max) {
