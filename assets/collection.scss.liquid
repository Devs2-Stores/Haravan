					grid-column: 4 span;
					@media(max-width: 991px){ grid-column: 3 span; }
					@media(max-width: 480px){ grid-column: 2 span; }
				}
			}
			&.five{
				grid-template-columns: repeat(5, 1fr);
				@media(max-width: 1200px){ grid-template-columns: repeat(4, 1fr); }
				@media(max-width: 991px){ grid-template-columns: repeat(3, 1fr); }
				@media(max-width: 480px){ grid-template-columns: repeat(2, 1fr); }
				> *{ min-width: 0; padding: 0; margin: 0; }
				.shop-pagination, .samePagi{
					grid-column: 5 span;
					@media(max-width: 1200px){ grid-column: 4 span; }
					@media(max-width: 991px){ grid-column: 3 span; }
					@media(max-width: 480px){ grid-column: 2 span; }
