{%- assign _main_data = "lg" -%}
{%- capture check -%}home_video_{{ _main_data }}_check{%- endcapture -%}
{%- if settings[check] -%}
<section class="home-video-{{ _main_data }} section-distance">
	<div class="home-video-{{ _main_data }}-wrapper">
		{%- capture image -%}home_video_{{ _main_data }}_image_d.jpg{%- endcapture -%}
		{%- capture title -%}home_video_{{ _main_data }}_alt{%- endcapture -%}
		{%- capture link -%}home_video_{{ _main_data }}_link{%- endcapture -%}
		{%- capture header -%}home_video_{{ _main_data }}_header{%- endcapture -%}
		{%- capture extraheader -%}home_video_{{ _main_data }}_extra_header{%- endcapture -%}
		{%- capture button_text -%}home_video_{{ _main_data }}_button_text{%- endcapture -%}
		<div class="home-video-{{ _main_data }}-container animate need-cover-bg">
			<video id="bigVideo" autoplay preload muted loop poster="{{ image | asset_url   }}">
				<source src="{{ settings.home_video_src }}" type="video/mp4">
			</video>
			<div class="home-video-{{ _main_data }}-item d-flex d-flex-center d-flex-vertical layout-gap-2unit">
				<div class="titleStyle1 white">
					<span>{{ settings[extraheader] }}</span>
					<h2>{{ settings[header] }}</h2>
					<a href="{{ settings[link] }}" title="{{ settings[button_text] }} " class="home-banner-{{ _main_data }}-button primary-btn">
						<span>{{ settings[button_text] | strip | truncate: 20 }}</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</section>
{%- endif -%}