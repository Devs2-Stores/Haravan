{%- if settings.home_product_list_two_check -%}
<div class="home-product-list home-product-list-two section-distance">
	<div class="container-fluid">
		<div class="home-product-list-flex-td">
			<div class="home-product-list-header">
				{%- if settings.home_product_list_two_header != "" && settings.home_product_list_two_header != _blank -%} 
				<h2>
					<a href="{{ settings.home_product_list_two_header_link }}" title="{{ settings.home_product_list_two_header | escape }}">
						{{ settings.home_product_list_two_header | strip }}
					</a>
				</h2>
				{%- endif -%}
				<div class="home-product-list-tabs">
					{%- for i in (1..3) -%}
					{%- capture check -%}home_product_list_two_collection_check__{{ i }}{%- endcapture -%}
					{%- if settings[check] -%}
					{%- capture collection -%}home_product_list_two_collection__{{ i }}{%- endcapture -%}
					{%- assign select_mini_collection = settings[collection] -%}
					<span class="home-product-list-tab-item {% if i == 1 %}active{% endif %}">{{ collections[select_mini_collection].name | strip }}</span>
					{%- endif -%}
					{%- endfor -%}
				</div>
			</div>
			<div class="home-product-list-slider-container">
				{%- for i in (1..3) -%}
				{%- capture check -%}home_product_list_two_collection_check__{{ i }}{%- endcapture -%}
				{%- if settings[check] -%}
				{%- capture collection -%}home_product_list_two_collection__{{ i }}{%- endcapture -%}
				{%- capture limit -%}home_product_list_two_limit__{{ i }}{%- endcapture -%}
				{%- assign select_mini_collection = settings[collection] -%}
				<div class="home-product-list-slider {% if i == 1 %}active{% endif %}">
					{%- if collections[select_mini_collection] -%}
					{%- if collections[select_mini_collection].products_count > 0 -%}
					{%- for product in collections[select_mini_collection].products limit:settings[limit] -%}
					{%- include "product-item" with sectionName: i -%}
					{%- endfor -%}
					{%- else -%}
					<p class="w-100 m-0 text-center">Nội dung đang được cập nhật...</p>
					{%- endif -%}
					{%- else -%}
					{%- if collections.all.products_count > 0 -%}
					{%- for product in collections.all.products limit: settings[limit] -%}
					{%- include "product-item" with sectionName: i -%}
					{%- endfor -%}
					{%- else -%}
					<p class="w-100 m-0 text-center">Nội dung đang được cập nhật...</p>
					{%- endif -%}
					{%- endif -%}
				</div>
				{%- endif -%}
				{%- endfor -%}
			</div>
		</div>
	</div>
</div>
{%- endif -%}