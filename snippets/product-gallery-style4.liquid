{%- assign checkOdd = product.images.size | modulo : 2 -%}
<div class="main-product-feature-thumbs {% if checkOdd == 1 %}isOdd{% endif %}">
	{%- for media in product.images -%}
	<a data-fancybox="gallery" href="{{ media.src | product_img_url : 'grande' }}" aria-label="{% if media.alt != _blank %}{{ media.alt | escape }}{% else %}{{ product.title }}{% endif %}"
	   title="{% if media.alt != _blank %}{{ media.alt | escape }}{% else %}{{ product.title }}{% endif %}" data-index="{{ forloop.index }}">
		<picture>
			<source width="480" height="480" media="(max-width: 480px)" srcset="{{ media.src | product_img_url : 'grande' }}"> 
			<source width="2048" height="2048" media="(min-width: 481px)" srcset="{{ media.src | product_img_url : '2048x2048' }}">
			<img class="w-auto" width="2048" height="2048" src="{{ media.src | product_img_url : '2048x2048' }}" title="{% if media.alt != _blank %}{{ media.alt | escape }}{% else %}{{ product.title }}{% endif %}"
				 alt="{% if media.alt != _blank %}{{ media.alt | escape }}{% else %}{{ product.title }}{% endif %}"
				 loading="eager" decoding="sync" fetchpriority="high">
		</picture>
	</a> 
	{%- endfor -%} 
</div>