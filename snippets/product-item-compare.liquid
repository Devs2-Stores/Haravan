{%- assign discount = product.variants.first.compare_at_price | minus: product.variants.first.price | divided_by:product.variants.first.compare_at_price | times : 100 | round -%}
{%- assign percent = product.variants.first.compare_at_price | minus: product.variants.first.price | divided_by:product.variants.first.compare_at_price | times : 100 -%}
{%- if percent > 99 -%}{%- assign discount = 99 -%}{%- endif -%}
{%- if percent < 1 -%}{%- assign discount = 1 -%}{%- endif -%}
<div class="product-item product-item-compare" data-id="{{ product.first_available_variant.id }}" data-handle="{{ product.handle }}">
	<p class="product-item-compare-image">
		<a href="{{ product.url }}" aria-label="{{ product.title }}" class="product-item-small-image-link" title="{{ product.title }}">			
			<img width="240" height="240" loading="lazy" decoding="async" class="w-auto"
				 src="{% if product.images.size > 0 %}{{ product.featured_image.src | product_img_url: 'medium' }}{% else %}https://theme.hstatic.net/200000588277/1000936869/14/no_image.jpg?v=1{% endif %}"
				 alt="{% if product.featured_image.alt.size >0 %}{{ product.featured_image.alt | escape }}{% else%}{{ product.title }}{% endif %}"
				 title="{% if product.featured_image.alt.size >0 %}{{ product.featured_image.alt | escape }}{% else%}{{ product.title }}{% endif %}"/>
		</a>
	</p>
	<p class="product-item-compare-title">
		<a href="{{product.url}}" aria-label="{{ product.title }}" title="{{ product.title }}"><b>Tên sản phẩm:</b> {{ product.title }}</a>
	</p>
	<div class="product-item-compare-review sapo-product-reviews-badge" data-id="{{ product.id }}"></div>
	<p class="product-item-compare-available">
		<b>Tình trạng:</b> {% if product.available -%}<span class="red">Còn hàng</span>{% else %}<span class="red">Cháy hàng</span>{%- endif -%}
	</p>
	<p class="product-item-compare-vendor">
		<b>Thương hiệu sản phẩm: </b>{% if product.vendor != _blank -%}{{ product.vendor }}{%- else -%}Đang cập nhật{%- endif -%}
	</p>
	<p class="product-item-compare-type">
		<b>Loại sản phẩm:</b> {% if product.type != _blank -%}{{ product.type }}{%- else -%}Đang cập nhật{%- endif -%}
	</p>
	<p class="product-item-compare-variants">
		<b>Số phiên bản:</b> {{ product.variants.size }} phiên bản lựa chọn
	</p>
	<p class="product-item-compare-price">
		{%- if product.variants.first.price != 0 -%}
		<strong>{{ product.variants.first.price | money }}</strong>
		{%- if percent > 0 and percent < 100 -%}
		<del>{{ product.variants.first.compare_at_price | money }}</del>
		<span>(-{{ discount }}%)</span>
		{%- endif -%}
		{%- else -%}
		<span style="margin: 0 !important; color: #F30;">Liên hệ</span>
		{%- endif -%}
	</p>
	
	<div class="product-item-compare-des">{{ product.description | strip_html | truncatewords: 50 }}</div>
	<div class="product-item-compare-action">
		{%- if product.available -%}
		{%- if product.variants.first.price != 0 -%}
		<button type="button" title="Thêm vào giỏ hàng" class="shop-addLoop-button" data-type="shop-addLoop-button">Thêm vào giỏ</button>
		{%- endif -%}
		{%- endif -%}
