<style>
	:root{
		--color_bg: #FFF;
		--color_bg_item: #F9F9F9 /* F7FAFF */;
		--color_main: {{ settings.home_color_master }};
		--color_main2:  {{ settings.home_color_master_two }};
		--color_main3:  {{ settings.home_color_master_three }};
		--color_main4: #fce3ea;
		--color1: #333;
		--color2: #FFF;
		--border_radius: 7px;
		--image_title: url({{ "image_title_all.png" | asset_url }}); 
	}
	body, html{ 
		font-family: "Arimo", sans-serif !important;
		background-color: var(--color_bg) !important;
	}
	.titleStyle1 > h1, .titleStyle1 > h2, .titleStyle1 > h3, .fontTitle{
		font-family: "Arimo", sans-serif !important;
	} 
	.lazyload{ opacity: 0; visibility: hidden }
	.lazyload.loaded{ opacity: 1; visibility: visible }
</style>
{%- if settings.image_title_all_check -%}
<style>
	.section-title-all > span{ padding-left: 27.5px; }
	.section-title-all > span:before{ background: var(--image_title) left center / cover no-repeat; display: block !important; }
</style>
{%- endif -%}

<!-- Product Card Feature -->
<style>
	.product-item .product-item-wrap .product-item-top .product-item-top-image .product-item-top-image-showcase{ 
		{%- case settings.shop_product_card_aspect_ratio -%}
		{%- when "square" -%}
		aspect-ratio: 1 !important;
		{%- when "vertical rectangle" -%}
		aspect-ratio: 2/3 !important;
		{%- when "horizontal rectangle" -%}
		aspect-ratio: 3/2 !important;
		{%- else -%}
		{%- endcase -%}
	}
</style>
{%- if settings.shop_product_card_image_full -%}
<style>.product-item .product-item-wrap .product-item-top .product-item-top-image .product-item-top-image-showcase img{ width: 100% !important; height: 100% !important; object-fit: cover !important; }</style>
{%- endif -%}

<!-- Color Feature --> 
{%- if settings.shop_filter_color_code_check -%}
<style>
	{%- for i in (1..20) -%}
	{%- capture name -%}shop_filter_color_name_{{ i }}{%- endcapture -%}
	{%- capture code -%}shop_filter_color_code_{{ i }}{%- endcapture -%}
	.shop-filter .shop-filter-item.color.{{ settings[name] | handleize }} label,
	.main-product-swatch .product-sw-line .product-sw-select .product-sw-select-item.sw-color .product-sw-select-item-span span.sw-color-{{ settings[name] | handleize }},
	#product-quickview .product-quickview-right .product-quickview-swatch .product-sw-line .product-sw-select .product-sw-select-item.sw-color .product-sw-select-item-span span.sw-color-{{ settings[name] | handleize }},
	.product-item-detail-variants-colors .product-item-detail-variants-color-{{ settings[name] | handleize }}{
		background-color: {{ settings[code] }};
	}
	{%- endfor -%}
</style>
{%- endif -%}
