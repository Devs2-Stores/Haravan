{%- if settings.home_policy_use -%}
<div class="section__index-policy section-distance">
  <div class="container">
    <div class="section__index-policy-wrap">
      <div class="section__index-policy-big-image">
        <img loading="lazy" src="{{ 'home_policy_image.png' |  img_url: 'grande'  | asset_url  }}"
          alt="{{ settings.home_policy_header | escape }}">
      </div>
      <div class="section__index-policy-content">
        <div class="titleStyle1">
          <h2>{{ settings.home_policy_header }}</h2>
        </div>
        <div class="section__index-policy-items">
          {%- for i in (1..3) -%}
          {%- capture use -%}home_policy_item_use_{{ i }}{%- endcapture -%}
          {%- capture image -%}home_policy_item_image_{{ i }}.png{%- endcapture -%}
          {%- capture header -%}home_policy_item_header_{{ i }}{%- endcapture -%}
          {%- capture content -%}home_policy_item_content_{{ i }}{%- endcapture -%}
          {%- if settings[use] -%}
          <div class="section__index-policy-item">
            <span><img src="{{ image |  img_url: 'small'  | asset_url  }}" alt="{{ settings[header] | escape }}"></span>
            <div class="section__index-policy-item-content">
              <h3 class="fontTitle">{{ settings[header] }}</h3>
              <p>{{ settings[content] }}</p>
            </div>
          </div>
          {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>
{%- endif -%}