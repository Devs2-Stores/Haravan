					<button class="tool-search-overplay" title="Đóng"></button>
					<div class="tool-search-smart"></div>
				</form>
			</div>
			<div class="header-right">
				{%- for i in (1..2) -%}
				{%- capture check -%}check_hotlineright{{ i }}{%- endcapture -%}
				{%- capture title -%}title_hotlineright{{ i }}{%- endcapture -%}
				{%- capture phone -%}phone_hotlineright{{ i }}{%- endcapture -%}
				{%- if settings[check] -%}
				<div class="header-right-phone">
					<a href="tel:{{ settings[phone] | default: shop.phone }}" title="Gọi ngay {{ settings[phone] | default: shop.phone }}" aria-label="Gọi ngay {{ settings[phone] | default: shop.phone }}">
						{%- include 'icon-hotline' -%}
					</a>
					<div class="header-right-phone-detail">
						<span>{{ settings[title] }}</span>
						<a href="tel:{{ settings[phone] | default: shop.phone  }}"  title="Gọi ngay {{ settings[phone] | default: shop.phone }}" aria-label="Gọi ngay {{ settings[phone] | default: shop.phone }}">
							{{ settings[phone] | default: shop.phone }}
						</a>
					</div>
				</div> 
				{%- endif -%}
				{%- endfor -%}
